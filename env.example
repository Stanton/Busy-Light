# Tuya Device Configuration
# Get these values from the Tuya Developer Console or using tinytuya wizard
TUYA_DEVICE_ID=your_device_id_here
TUYA_DEVICE_IP=192.168.x.x
TUYA_LOCAL_KEY=your_local_key_here
TUYA_VERSION=3.3

# Tuya Cloud API Configuration (Required)
# Get these from https://iot.tuya.com/cloud/ -> Cloud Development -> Create Project
TUYA_API_KEY=your_api_key_here
TUYA_API_SECRET=your_api_secret_here
TUYA_API_REGION=eu

# Calendar Configuration
LEAD_TIME_MINUTES=2
POLL_INTERVAL_SECONDS=60

# Google Calendar Configuration
GOOGLE_CREDENTIALS_PATH=/app/data/credentials.json
GOOGLE_TOKEN_PATH=/app/data/token.json

# Logging
LOG_LEVEL=INFO

# Docker Configuration
COMPOSE_PROJECT_NAME=calendar-busy-light
